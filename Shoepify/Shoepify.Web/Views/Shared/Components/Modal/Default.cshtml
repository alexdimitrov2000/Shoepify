@model ModalViewModel

<section class="modal" id='modal'>
    <section class="dialog-container">
        <section id="dialog">
            <header>
                <h1 class="title">@Model.ProductName</h1>
            </header>
            <main>
                <p>Are you sure you want to delete this product?</p>
            </main>
            <footer>
                <form method="post" asp-area="Administration" asp-controller="Shoes" asp-action="Delete" asp-route-id="@Model.ShoeId">
                    <button type="submit" id="confirm-delete-btn">Delete</button>
                </form>
                <button id="close-modal-btn" onclick="closeModal()">Close</button>
            </footer>
        </section>
    </section>
</section>