@model Shoepify.Web.Areas.Administration.Models.Colors.ColorCreateInputModel

@{
    ViewData["Title"] = "Create a Color";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="jumbotron">
        <form asp-area="Administration" asp-controller="Colors" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row justify-content-around">
                <div class="col-md-6">
                    <div class="col-md-10">
                        <h4 class="text-center">Required fields</h4>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label> <span class="required-field">&#42;</span>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Hex" class="control-label"></label> <span class="required-field">&#42;</span>
                            <input asp-for="Hex" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn text-center col-md-3 col-sm-12" id="createButton">Create</button>
            </div>
        </form>
    </div>
</main>
